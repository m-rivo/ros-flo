---
import { TITULO } from "../../constants";

const links = [
    { url: "/", name: "Inicio"},
    { url: "#", name: "Acerca de"},
    { url: "/#servicios", name: "Servicios"},
    { url: "/#contacto", name: "Contacto"},
]
const date = new Date(); // Crea un nuevo objeto Date con la fecha y hora actuales
const year = date.getFullYear();
---

<footer class="bg-white rounded-lg shadow-sm m-4">
    <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <a href="#" class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse">
                <!-- <img src="https://flowbite.com/docs/images/logo.svg" class="h-8" alt="Flowbite Logo" /> -->
                <span class="self-center text-2xl font-semibold whitespace-nowrap text-primary">{TITULO}</span>
            </a>
            <ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0">
                {links?.map(link => (
                    <li>
                        <a href={link.url} class="hover:underline me-4 md:me-6">{link.name}</a>
                    </li>
                ))}
            </ul>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto lg:my-8" />
        <span class="block text-sm text-gray-500 sm:text-center">Â© {year} <a href="#" class="hover:underline">{TITULO}</a>. All Rights Reserved.</span>
    </div>
</footer>